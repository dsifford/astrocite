{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "strict": true,
    "target": "es5",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "packages/**/*"
  ]
}
