{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "downlevelIteration": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "paths": {
        "astrocite-core": ["./packages/core"],
        "astrocite-*": ["./packages/astrocite-*"]
    }
  }
}
