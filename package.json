{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "ci": "npm run bootstrap && npm run build && jest --coverage --runInBand",
    "lint": "tslint -e \"**/*.js\" -p . -t codeFrame",
    "postci": "npm run lint",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm run lint"
    }
  },
  "jest": {
    "coverageDirectory": "node_modules/.cache/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!packages/**/*.d.ts",
      "!packages/**/index.ts"
    ],
    "preset": "ts-jest"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "pegjs": "^0.10.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "csl-json": "^0.1.0"
  }
}
