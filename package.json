{
  "private": true,
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.57",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "pegjs": "^0.10.0",
    "prettier": "^1.9.1",
    "ts-jest": "^21.2.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna exec -- npm run build",
    "ci": "npm run bootstrap && npm run build && jest --coverage --runInBand",
    "lint": "tslint -e \"**/*.js\" -p . -t codeFrame",
    "postci": "npm run lint",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "prepush": "npm test && npm run lint",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageDirectory": "tmp/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!packages/**/*.d.ts",
      "!packages/**/index.ts"
    ],
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
