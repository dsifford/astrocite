{
  "name": "astrocite",
  "version": "0.1.0",
  "description": "Bibliography file format => AST => CSL JSON",
  "license": "MIT",
  "repository": "dsifford/astrocite",
  "author": "Derek P Sifford <dereksifford@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "prepush": "npm test && npm run lint",
    "test": "npm run build && jest",
    "posttest": "npm run lint",
    "lint": "tslint -p . -t codeFrame",
    "prebuild":
      "pegjs -o src/bibtex/grammar.js --cache src/bibtex/grammar.pegjs && pegjs -o src/ris/grammar.js --cache src/ris/grammar.pegjs",
    "build": "tsc -p ."
  },
  "lint-staged": {
    "*.{ts,tsx,json}": ["prettier --write", "git add"]
  },
  "files": ["lib/**"],
  "keywords": ["CSL", "Citation Style Language", "BibTeX", "AST", "Bibliography", "Citation"],
  "devDependencies": {
    "@types/node": "^8.0.27",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.1.3",
    "pegjs": "^0.10.0",
    "prettier": "^1.6.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
