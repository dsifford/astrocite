{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "ci": "npm run bootstrap && npm run build && jest --coverage --runInBand",
    "lint": "tslint -e \"**/*.js\" -p . -t codeFrame",
    "postci": "npm run lint",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm run lint"
    }
  },
  "jest": {
    "coverageDirectory": "node_modules/.cache/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!packages/**/*.d.ts",
      "!packages/**/index.ts"
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "pegjs": "^0.10.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-tslint-plugin": "^0.5.4"
  }
}
