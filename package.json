{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna exec -- npm run build",
    "ci": "npm run bootstrap && npm run build && jest --coverage --runInBand",
    "lint": "tslint -e \"**/*.js\" -p . -t codeFrame",
    "postci": "npm run lint",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test && npm run lint"
    }
  },
  "jest": {
    "coverageDirectory": "node_modules/.cache/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!packages/**/*.d.ts",
      "!packages/**/index.ts"
    ],
    "preset": "ts-jest"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "pegjs": "^0.10.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
