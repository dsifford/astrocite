{
  "name": "astrocite",
  "version": "0.2.0",
  "description": "Bibliography file format => AST => CSL JSON",
  "license": "MIT",
  "repository": "dsifford/astrocite",
  "author": "Derek P Sifford <dereksifford@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "prepush": "npm test && npm run lint",
    "test": "jest packages/**",
    "ci": "npm run bootstrap && npm run build && jest --coverage src/**",
    "postci": "npm run lint",
    "lint": "tslint -e \"**/*.js\" -p . -t codeFrame",
    "build-grammars": "lerna --ignore astrocite --ignore astrocite-core exec -- pegjs -o src/grammar.js src/grammar.pegjs",
    "build-types": "lerna --ignore astrocite --ignore astrocite-core exec -- cp ./src/index.d.ts ./lib/index.d.ts",
    "prebuild": "lerna exec -- rm -rf lib/* && npm run build-grammars && npm run build-types",
    "build": "lerna exec -- tsc -p ."
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib/**"
  ],
  "keywords": [
    "CSL",
    "Citation Style Language",
    "BibTeX",
    "AST",
    "Bibliography",
    "Citation"
  ],
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lerna": "^2.1.2",
    "lint-staged": "^4.1.3",
    "pegjs": "^0.10.0",
    "prettier": "^1.7.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageDirectory": "tmp/coverage",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!packages/**/*.d.ts",
      "!packages/**/index.ts"
    ],
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
